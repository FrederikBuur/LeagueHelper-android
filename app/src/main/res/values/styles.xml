<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primaryDark</item>
		<item name="colorAccent">@color/accent</item>
	</style>

	<style name="TextBig" parent="android:Widget.TextView">
		<item name="android:textColor">@color/textMainDark</item>
		<item name="android:textSize">16sp</item>
		<item name="android:fontFamily">sans-serif-black</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="TextMedium" parent="android:Widget.TextView">
		<item name="android:textColor">@color/textMainGrey</item>
		<item name="android:textSize">14sp</item>
		<item name="android:fontFamily">sans-serif-medium</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="TextSmall" parent="android:Widget.TextView">
		<item name="android:textColor">@color/textMainGrey</item>
		<item name="android:textSize">12sp</item>
		<item name="android:fontFamily">sans-serif-light</item>
		<item name="android:textStyle">normal</item>
	</style>

</resources>
