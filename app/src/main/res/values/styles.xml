<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primaryDark</item>
		<item name="colorAccent">@color/accent</item>
	</style>

	<style name="LeagueTextBig" parent="android:Widget.TextView">
		<item name="android:textColor">@color/textMainDark</item>
		<item name="android:textSize">16sp</item>
		<item name="android:fontFamily">sans-serif-black</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="LeagueTextMedium" parent="android:Widget.TextView">
		<item name="android:textColor">@color/textMainGrey</item>
		<item name="android:textSize">14sp</item>
		<item name="android:fontFamily">sans-serif-medium</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="LeagueTextSmall" parent="android:Widget.TextView">
		<item name="android:textColor">@color/textMainGrey</item>
		<item name="android:textSize">12sp</item>
		<item name="android:fontFamily">sans-serif-light</item>
		<item name="android:textStyle">normal</item>
	</style>

	<style name="LeaguePrimaryButton" parent="Widget.AppCompat.Button">
		<item name="android:foreground">?attr/selectableItemBackground</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingStart">@dimen/margin_4</item>
		<item name="android:paddingEnd">@dimen/margin_4</item>
		<item name="android:background">@drawable/background_button_primary</item>
		<item name="android:textColor">@color/textMainLight</item>
		<item name="android:textAllCaps">false</item>
	</style>

</resources>
