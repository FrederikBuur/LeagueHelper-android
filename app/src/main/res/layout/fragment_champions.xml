<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".pages.champions.ChampionsFragment">

	<androidx.appcompat.widget.Toolbar
		android:id="@+id/championsToolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/colorPrimary"
		android:elevation="@dimen/margin_8"
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
		app:titleTextColor="@color/colorTextMainLight">
	</androidx.appcompat.widget.Toolbar>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/championsRecyclerView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:clipToPadding="false"
			android:clipChildren="false"
			android:padding="@dimen/margin_4"
			app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
			app:spanCount="4"
			tools:listitem="@layout/item_champions"/>

		<com.turingtechnologies.materialscrollbar.DragScrollBar
			android:id="@+id/dragScrollBar"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="end|center_vertical"
			app:msb_scrollMode="lastElement"
			app:msb_lightOnTouch="false"
			app:msb_recyclerView="@id/championsRecyclerView"/>

	</FrameLayout>
</LinearLayout>